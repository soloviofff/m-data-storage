{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "CommonJS",
		"moduleResolution": "Node",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"ts-node": {
		"transpileOnly": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
